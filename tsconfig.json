    "compilerOptions": {

        /******************** Project Options ********************/

        "allowJs": true,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "incremental": false,
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2015",

        // "checkJs": false,
        // "downlevelIteration": false,
