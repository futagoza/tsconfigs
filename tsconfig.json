{

    /******************** Root Fields ********************/

    "exclude": [
        ".cache",
        ".idea",
        "build",
        "bower_components",
        "dist",
        "jspm_packages",
        "node_modules",
        "out",
        "temp",
        "web_packages"
    ],
    "include": [
        "lib/**/*",
        "packages/**/*",
        "src/**/*",
        "tests/**/*",
    ],
    "typeAcquisition": {
        "enable": false,
        "include": [],
        "exclude": [],
    },

